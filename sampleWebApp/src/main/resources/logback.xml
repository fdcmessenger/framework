<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<logger name="org.sbbs" level="DEBUG" />
	<logger name="org.hibernate.tool" level="DEBUG" />
	<logger name="org.hibernate.cache" level="DEBUG" />
	<logger name="org.apache.shiro" level="DEBUG" />
	<logger name="org.springframework" level="DEBUG" />
	<logger name="com.opensymphony.xwork2" level="DEBUG" />
	<!-- <level value="INFO"/> </logger> -->
	<logger name="org.apache.struts2" level="DEBUG" />
	<logger name="org.apache.shiro" level="DEBUG" />
	<logger name="org.apache.struts2.spring" level="DEBUG" />
	<logger name="com.googlecode.genericdao" level="DEBUG" />
	<logger name="net.sf.ehcache" level="DEBUG" />
	<!-- <level value="DEBUG"/> </logger> -->
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>